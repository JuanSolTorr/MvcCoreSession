@{

    Mascota mascota = ViewData["MASCOTA"] as Mascota;

}

<h1 style="color:blue">

    Session mascota Bytes[]
</h1>

<h3>@ViewData["MENSAJE"]</h3>
<p>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaBytes" asp-route-accion="almacenar">

        Almacenar
    </a>
</p>

<p>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaBytes" asp-route-accion="mostrar">

        Mostrar
    </a>
</p>

@if (mascota != null)

{
    <h1 style="color: blue">

        @mascota.Nombre, @mascota.Raza, @mascota.Edad
    </h1>

}
